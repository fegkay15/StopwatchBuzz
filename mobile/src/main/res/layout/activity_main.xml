<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.fegeley.stopwatchbuzz.AutoResizeTextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/textView"
            android:autoText="false"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="500sp"
            android:layout_weight="0.15"
            android:text="00:00:00:000" />

        <com.fegeley.stopwatchbuzz.AutoResizeTextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Enter Frequency of Vibration"
            android:id="@+id/textView2"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="500sp"
            android:layout_weight="0.05" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Hours"
                android:id="@+id/textView6"
                android:layout_weight="0.33"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Minutes"
                android:id="@+id/textView3"
                android:layout_weight="0.33"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Seconds"
                android:id="@+id/textView4"
                android:layout_weight="0.33"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Milliseconds"
                android:id="@+id/textView5"
                android:layout_weight="0.33"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_weight="1"
                android:hint="00"
                android:singleLine="true"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_weight="1"
                android:hint="00"
                android:singleLine="true"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText3"
                android:layout_weight="1"
                android:hint="00"
                android:singleLine="true"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_weight="1"
                android:hint="000"
                android:singleLine="true"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <com.fegeley.stopwatchbuzz.AutoResizeTextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Vibration Length:"
            android:id="@+id/textView7"
            android:gravity="center_horizontal"
            android:layout_weight="0.05"
            android:textSize="500sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.05"
            android:gravity="center_horizontal"
            android:measureWithLargestChild="false">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long"
                android:id="@+id/radioButton" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:id="@+id/radioButton2"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short"
                android:id="@+id/radioButton3" />
        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/button"
                android:layout_weight="0.33"
                android:onClick="startPressed"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:id="@+id/button2"
                android:layout_weight="0.33"
                android:onClick="stopPressed"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/button3"
                android:layout_weight="0.33"
                android:onClick="resetPressed"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
