<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10">

            <com.fegeley.stopwatchbuzz.AutoResizeTextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Overall:"
                android:id="@+id/textView8"
                android:layout_weight="0.25"
                android:gravity="center"
                android:textSize="500sp"
                android:singleLine="true" />

            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.03" />

            <com.fegeley.stopwatchbuzz.AutoResizeTextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/textView"
                android:autoText="false"
                android:singleLine="true"
                android:gravity="center"
                android:textSize="500sp"
                android:layout_weight="0.72"
                android:text="00:00:00:000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10">

            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.10" />

            <com.fegeley.stopwatchbuzz.AutoResizeTextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Lap:"
                android:id="@+id/textView9"
                android:layout_weight="0.15"
                android:singleLine="true"
                android:textSize="500sp"
                android:gravity="center" />

            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.03" />

            <com.fegeley.stopwatchbuzz.AutoResizeTextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="00:00:00:000"
                android:id="@+id/textView10"
                android:layout_weight="0.72"
                android:singleLine="true"
                android:textSize="500sp"
                android:gravity="center" />
        </LinearLayout>

        <com.fegeley.stopwatchbuzz.AutoResizeTextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Enter Frequency of Vibration"
            android:id="@+id/textView2"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="500sp"
            android:layout_weight="0.05" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Hours"
                android:id="@+id/textView6"
                android:layout_weight="0.33"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Minutes"
                android:id="@+id/textView3"
                android:layout_weight="0.33"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Seconds"
                android:id="@+id/textView4"
                android:layout_weight="0.33"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Milliseconds"
                android:id="@+id/textView5"
                android:layout_weight="0.33"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_weight="1"
                android:hint="00"
                android:singleLine="true"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_weight="1"
                android:hint="00"
                android:singleLine="true"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText3"
                android:layout_weight="1"
                android:hint="00"
                android:singleLine="true"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_weight="1"
                android:hint="000"
                android:singleLine="true"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33">

                <com.fegeley.stopwatchbuzz.AutoResizeTextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Vibration From:"
                    android:id="@+id/textView11"
                    android:textSize="500sp"
                    android:singleLine="true"
                    android:layout_weight="0.38" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.02" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/spinner"
                    android:layout_weight="0.60"
                    android:entries="@array/vibfrom"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33">

                <com.fegeley.stopwatchbuzz.AutoResizeTextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Vibration Length:"
                    android:id="@+id/textView7"
                    android:layout_weight="0.40"
                    android:textSize="500sp"
                    android:gravity="center" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/spinner2"
                    android:layout_weight="0.60"
                    android:entries="@array/viblength"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/button"
                android:layout_weight="0.33"
                android:onClick="startPressed"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:id="@+id/button2"
                android:layout_weight="0.33"
                android:onClick="stopPressed"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/button3"
                android:layout_weight="0.33"
                android:onClick="resetPressed"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/scrollView"
            android:layout_weight="0.30"
            android:isScrollContainer="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linlay">


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="MARK START"
                android:id="@+id/button4"
                android:layout_weight="0.33"
                android:onClick="newLap"
                android:singleLine="true" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="MARK END"
                android:id="@+id/button5"
                android:layout_weight="0.33"
                android:onClick="whatEnd"
                android:singleLine="true" />

            <ToggleButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="AUTO START"
                android:id="@+id/toggleButton"
                android:layout_weight="0.33"
                android:textOff="AUTO START"
                android:singleLine="true"
                android:textOn="AUTO START"
                android:ellipsize="none" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
